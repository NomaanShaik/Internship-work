import java.util.*;

class Product {
    String name;
    double price;
    Product(String name, double price) {
        this.name = name;
        this.price = price;
    }
    void displayInfo() {
        System.out.println("Name: " + name);
        System.out.println("Price: ₹" + price);
    }
}
class Electronics extends Product {
    String brand;
    Electronics(String name, double price, String brand) {
        super(name, price);
        this.brand = brand;
    }
    void displayInfo() {
        super.displayInfo();
        System.out.println("Brand: " + brand);
    }
}
class Clothing extends Product {
    String size;
    Clothing(String name, double price, String size) {
        super(name, price);
        this.size = size;
    }
    void displayInfo() {
        super.displayInfo();
        System.out.println("Size: " + size);
    }
}
class Books extends Product {
    String author;
    Books(String name, double price, String author) {
        super(name, price);
        this.author = author;
    }
    void displayInfo() {
        super.displayInfo();
        System.out.println("Author: " + author);
    }
}
class ShoppingCart {
    ArrayList<Product> items = new ArrayList<>();
    void addProduct(Product p) {
        items.add(p);
        System.out.println(p.name + " added to cart.");
    }
    void viewCart() {
        if (items.isEmpty()) {
            System.out.println("Cart is empty.");
            return;
        }
        for (Product p : items) {
            p.displayInfo();
        }
    }
    double getTotal() {
        double total = 0;
        for (Product p : items) total += p.price;
        return total;
    }
}

public class week5Project {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        ShoppingCart cart = new ShoppingCart();
        ArrayList<Product> products = new ArrayList<>();
        products.add(new Electronics("Laptop", 55000, "HP"));
        products.add(new Electronics("Smartphone", 15000, "Samsung"));
        products.add(new Clothing("T-Shirt", 799, "L"));
        products.add(new Clothing("Jeans", 1599, "32"));
        products.add(new Books("Java Basics", 499, "James Gosling"));
        products.add(new Books("DSA Guide", 999, "Mark Lewis"));
        while (true) {
            System.out.println("\n1. View Products");
            System.out.println("2. Add to Cart");
            System.out.println("3. View Cart");
            System.out.println("4. Total Price");
            System.out.println("5. Exit");
            System.out.print("Choose: ");
            int choice = sc.nextInt();
            if (choice == 1) {
                System.out.println("\n--- Products ---");
                int i = 1;
                for (Product p : products) {
                    System.out.println(i + ". " + p.name + " (₹" + p.price + ")");
                    i++;
                }
            }
            else if (choice == 2) {
                System.out.print("Enter product number: ");
                int num = sc.nextInt();
                if (num >= 1 && num <= products.size()) {
                    cart.addProduct(products.get(num - 1));
                } else {
                    System.out.println("Invalid choice.");
                }
            }
            else if (choice == 3) {
                cart.viewCart();
            }
            else if (choice == 4) {
                System.out.println("Total: ₹" + cart.getTotal());
            }
            else if (choice == 5) {
                System.out.println("Thank you for shopping!");
                break;
            }
            else {
                System.out.println("Invalid option.");
            }
        }
    }
}
